<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyWorkouts"
    >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_my_workouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FFFF7A"
        android:orientation="vertical"
        android:padding="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_workout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="right"
        android:layout_below="@+id/recyclerview_my_workouts"
        android:layout_alignParentStart="true"
        android:layout_marginStart="303dp"
        android:layout_marginTop="-136dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="@color/white"
        android:backgroundTint="#40E0D0"/>



</RelativeLayout>
